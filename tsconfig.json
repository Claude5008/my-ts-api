{
  "compilerOptions": {
    "target": "es2016", // Or a newer ES version
    "module": "commonjs", // Or "esnext" if you prefer ES Modules
    "outDir": "./dist", // Where compiled JavaScript will go
    "rootDir": "./src", // Your TypeScript source files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables better interoperability for CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent file casing
  },
  "include": ["src/**/*.ts"], // Include all .ts files in the src directory
  "exclude": ["node_modules"] // Exclude node_modules
}
